<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">

<menu id="root-menu" label="Openbox 3">
  <separator label="Semplice"></separator>
  <item label="Terminal emulator">
    <action name="Execute"><execute>x-terminal-emulator</execute></action>
  </item>
  <item label="Web browser">
    <action name="Execute"><execute>x-www-browser</execute></action>
  </item>
  <!-- This requires the presence of the 'menu' package to work -->
  <!-- <menu id="Debian" label="Applications" /> --> <!-- Uncomment the menu to use the Debian menu method, more faster :) -->
  <separator />
  <menu id="apps" label="Applications" execute="/usr/share/semplice-default-settings/advanced/xdg-menu.py applications" /> <!-- The first time may be slower, if is always slower, comment this code and uncomment the above. -->
  <menu id="places" label="Places" execute="/usr/share/semplice-default-settings/advanced/places.sh" />
  <menu id="settings" label="Settings" execute="/usr/share/semplice-default-settings/advanced/xdg-menu.py settings" /> <!-- same as two lines above. -->
  <separator />
  <menu id="client-list-menu" />
  <separator />
  <item label="About Semplice...">
    <action name="Execute"><execute>semplice-about</execute></action>
  </item>
  <menu id="appearance" label="Appearance">
  	<menu id="wallpaper" label="Wallpaper">
  		<item label="Add">
  			<action name="Execute"><execute>nitrogen-add-wallpaper</execute></action>
  		</item>
  		<item label="Manage">
  			<action name="Execute"><execute>nitrogen</execute></action>
  		</item>
  	</menu> <!-- As of Beta1 - obconf is integrated in lxappearance 
  	<item label="Openbox configuration manager">
  		<action name="Execute"><execute>obconf</execute></action>
  	</item> -->
  	<item label="GTK+ theme selector">
  		<action name="Execute"><execute>lxappearance</execute></action>
  	</item>
  </menu>
  <menu id="exit" label="End Session">
  	<menu id="exit_openbox" label="Openbox">
  		<item label="Reconfigure">
  			<action name="Reconfigure" />
  		</item>
  		<item label="Restart Session">
  			<action name="Restart" />
  		</item>
  	</menu>
  	<item label="Lock Screen">
  		<action name="Execute"><execute>semplice-logout --lock</execute></action>
  	</item>
  	<item label="Logout">
  		<action name="Execute"><execute>semplice-logout --logout</execute></action>
  	</item>
   	<item label="Switch User">
  		<action name="Execute"><execute>semplice-logout --switch-user</execute></action>
  	</item>
  	<separator />
  	<item label="Suspend">
  		<action name="Execute"><execute>semplice-logout --suspend</execute></action>
  	</item>
  	<item label="Hibernate">
		<action name="Execute"><execute>semplice-logout --hibernate</execute></action>
  	</item>
  	<separator />
  	<item label="Shutdown">
  		<action name="Execute"><execute>semplice-logout --shutdown</execute></action>
  	</item>
   	<item label="Reboot">
  		<action name="Execute"><execute>semplice-logout --reboot</execute></action>
  	</item>
  </menu>
</menu>

</openbox_menu>

