#!/bin/sh
# postrm script for #PACKAGE#
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

remove() {
	# Restore lightdm configurations
	if [ -e "/etc/lightdm/lightdm.conf.distrib" ]; then
		rm -f /etc/lightdm/lightdm.conf
		dpkg-divert --rename --package semplice-openbox-default-settings --divert "/etc/lightdm/lightdm.conf.distrib" --remove "/etc/lightdm/lightdm.conf"
	fi
	if [ -e "/etc/lightdm/lightdm-gtk-greeter.conf.distrib" ]; then
		rm -f /etc/lightdm/lightdm-gtk-greeter.conf
		dpkg-divert --rename --package semplice-openbox-default-settings --divert "/etc/lightdm/lightdm-gtk-greeter.conf.distrib" --remove "/etc/lightdm/lightdm-gtk-greeter.conf"
	fi
	if [ -e "/etc/lightdm/lightdm.conf.20140919sempliceupgrade" ]; then
	    rm -f /etc/lightdm/lightdm.conf.20140919sempliceupgrade
	fi
	if [ -e "/etc/lightdm/lightdm.conf.20140921sempliceupgrade" ]; then
	    rm -f /etc/lightdm/lightdm.conf.20140921sempliceupgrade
	fi

	# Restore chrome configurations
	if [ -e "/etc/chromium/master_preferences.distrib" ]; then
		rm -f /etc/chromium/master_preferences
		dpkg-divert --rename --package semplice-openbox-default-settings --divert "/etc/chromium/master_preferences.distrib" --remove "/etc/chromium/master_preferences"
	fi

	# Update gconf defaults
	if [ "`which update-gconf-defaults`" ]; then
	 update-gconf-defaults
	fi

}


case "$1" in
    purge|remove|failed-upgrade|abort-install|abort-upgrade|disappear)
    remove

    ;;

    upgrade)
    echo "* Package upgrade; skipping postrm.";;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
