#!/bin/sh
# postrm script for #PACKAGE#
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

changegdm() {

echo -n "Changing GDM Theme... "

graphicaltheme="`grep \"GraphicalTheme=semplice\" /etc/gdm/gdm.conf`"
if [ "$graphicaltheme" ]; then
 sed -i s/"$graphicaltheme"/""/ /etc/gdm/gdm.conf
fi

if [ "$?" != "0" ]; then
 echo "Failed."
 exit 1
fi

echo "Done."

invoke-rc.d gdm reload

}

changegdm3() {
	echo -n "Restoring old GDM3 Configuration... "
	# Get md5sums of our config and user's...
	md51="`md5sum /usr/share/semplice-default-settings/gdm/greeter.gconf-defaults | cut -d \" \" -f1`"
	md52="`md5sum /etc/gdm3/greeter.gconf-defaults | cut -d \" \" -f1`"
	if [ "$md51" = "$md52" ]; then
		# GDM config not touched by user; we can safely restore the older.
		rm /etc/gdm3/greeter.gconf-defaults
		mv /etc/gdm3/greeter.gconf-defaults.semplicebackup /etc/gdm3/greeter.gconf-defaults 
		[ "$?" != "0" ] && echo "Failed."
	else
		# GDM config changed by someone. Leave it untouched.
		echo "Modified by user; leaved untouched."
	fi

	invoke-rc.d gdm3 reload
}

case "$1" in
    purge|remove|failed-upgrade|abort-install|abort-upgrade|disappear)
    [ -e "/etc/gdm/gdm.conf" ] && changegdm
    [ -e "/etc/gdm3/greeter.gconf-defaults.semplicebackup" ] && changegdm3

    if [ "`which update-gconf-defaults`" ]; then
     update-gconf-defaults
    fi

    ;;

    upgrade)
    echo "* Package upgrade; skipping prerm.";;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
