#!/bin/sh
# postinst script for #PACKAGE#
#
# see: dh_installdeb(1)

#set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


changegdm() {

echo -n "Changing GDM Theme... "

graphicaltheme="`grep \"GraphicalTheme=\" /etc/gdm/gdm.conf`"
if [ "$graphicaltheme" ]; then
 sed -i s/"$graphicaltheme"/"GraphicalTheme=semplice"/ /etc/gdm/gdm.conf
else
 sed -i s/"\[greeter\]"/"\[greeter\]\nGraphicalTheme=semplice"/ /etc/gdm/gdm.conf
fi

if [ "$?" != "0" ]; then
 echo "Failed."
 #exit 1
 echo "W: Failed to change GDM Theme."
 return 0
fi

echo "Done."

invoke-rc.d gdm reload

}

changegdm3() {
	echo -n "Changing GDM3 Configuration... "
	# Backup the old config
	mv /etc/gdm3/greeter.gconf-defaults /etc/gdm3/greeter.gconf-defaults.semplicebackup
	# Copy the new one
	cp /usr/share/semplice-default-settings/gdm/greeter.gconf-defaults /etc/gdm3/greeter.gconf-defaults
	if [ "$?" != "0" ]; then
		echo "Failed."
		echo "W: Failed to change GDM Configuration."
		return 0
	fi
	
	echo "Done."
	invoke-rc.d gdm3 reload
}
	

case "$1" in
    configure)
	if [ -z "$2" ]; then
	 [ -e "/etc/gdm/gdm.conf" ] && changegdm
	 [ -e "/etc/gdm3/greeter.gconf-defaults" ] && changegdm3
	fi

	if [ "`which update-gconf-defaults`" ]; then
	 update-gconf-defaults
	fi
    ;;
    semplice-live-configure)
	changegdm3;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
